  (k : Z ‚ü∂ t.X) : (fork.is_limit.hom_iso ht _ (q ‚â´ k) : Z' ‚ü∂ X) = q ‚â´ (fork.is_limit.hom_iso ht _ k : Z ‚ü∂ X) :=
