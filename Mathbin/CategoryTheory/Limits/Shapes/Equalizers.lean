/-- `parallel_pair f g` is the diagram in `C` consisting of the two morphisms `f` and `g` with
    common domain and codomain. -/
def parallel_pair (f g : X ‚ü∂ Y) : walking_parallel_pair.{v} ‚•§ C :=
  { obj :=
      fun x =>
        match x with 
        | zero => X
        | one => Y,
    map :=
      fun x y h =>
        match x, y, h with 
