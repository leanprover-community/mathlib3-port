  { x := t.X,
    Œπ :=
      { app :=
          fun X =>
            eq_to_hom
                (by 
                  tidy) ‚â´
              t.Œπ.app X,
        naturality' :=
          fun j j' g =>
            by 
              cases j <;> cases j' <;> cases g <;> dsimp <;> simp  } }

