#print CategoryTheory.Adjunction.toMonad /-
/-- For a pair of functors `L : C ‚•§ D`, `R : D ‚•§ C`, an adjunction `h : L ‚ä£ R` induces a monad on
the category `C`.
-/
@[simps]
def toMonad (h : L ‚ä£ R) : Monad C where
  toFunctor := L ‚ãô R
  Œ∑' := h.Unit
  Œº' := whiskerRight (whiskerLeft L h.counit) R
  assoc' X := by dsimp; rw [‚Üê R.map_comp]; simp
  right_unit' X := by dsimp; rw [‚Üê R.map_comp]; simp
#align category_theory.adjunction.to_monad CategoryTheory.Adjunction.toMonad
-/

#print CategoryTheory.Adjunction.toComonad /-
/-- For a pair of functors `L : C ‚•§ D`, `R : D ‚•§ C`, an adjunction `h : L ‚ä£ R` induces a comonad on
the category `D`.
-/
@[simps]
def toComonad (h : L ‚ä£ R) : Comonad D
    where
  toFunctor := R ‚ãô L
  Œµ' := h.counit
  Œ¥' := whiskerRight (whiskerLeft R h.Unit) L
  coassoc' X := by dsimp; rw [‚Üê L.map_comp]; simp
  right_counit' X := by dsimp; rw [‚Üê L.map_comp]; simp
#align category_theory.adjunction.to_comonad CategoryTheory.Adjunction.toComonad
-/

#print CategoryTheory.Adjunction.adjToMonadIso /-
/-- The monad induced by the Eilenberg-Moore adjunction is the original monad.  -/
@[simps]
def adjToMonadIso (T : Monad C) : T.adj.toMonad ‚âÖ T :=
  MonadIso.mk (NatIso.ofComponents (fun X => Iso.refl _) (by tidy)) (fun X => by dsimp; simp)
    fun X => by dsimp; simp
#align category_theory.adjunction.adj_to_monad_iso CategoryTheory.Adjunction.adjToMonadIso
-/

#print CategoryTheory.Adjunction.adjToComonadIso /-
/-- The comonad induced by the Eilenberg-Moore adjunction is the original comonad. -/
@[simps]
def adjToComonadIso (G : Comonad C) : G.adj.toComonad ‚âÖ G :=
  ComonadIso.mk (NatIso.ofComponents (fun X => Iso.refl _) (by tidy)) (fun X => by dsimp; simp)
    fun X => by dsimp; simp
#align category_theory.adjunction.adj_to_comonad_iso CategoryTheory.Adjunction.adjToComonadIso
-/

end Adjunction

#print CategoryTheory.Monad.comparison /-
/-- Gven any adjunction `L ‚ä£ R`, there is a comparison functor `category_theory.monad.comparison R`
sending objects `Y : D` to Eilenberg-Moore algebras for `L ‚ãô R` with underlying object `R.obj X`.

We later show that this is full when `R` is full, faithful when `R` is faithful,
and essentially surjective when `R` is reflective.
-/
@[simps]
def Monad.comparison (h : L ‚ä£ R) : D ‚•§ h.toMonad.Algebra
    where
  obj X :=
    { A := R.obj X
      a := R.map (h.counit.app X)
      assoc' := by dsimp; rw [‚Üê R.map_comp, ‚Üê adjunction.counit_naturality, R.map_comp]; rfl }
  map X Y f :=
    { f := R.map f
      h' := by dsimp; rw [‚Üê R.map_comp, adjunction.counit_naturality, R.map_comp] }
#align category_theory.monad.comparison CategoryTheory.Monad.comparison
-/

#print CategoryTheory.Monad.comparisonForget /-
/-- The underlying object of `(monad.comparison R).obj X` is just `R.obj X`.
-/
@[simps]
def Monad.comparisonForget (h : L ‚ä£ R) : Monad.comparison h ‚ãô h.toMonad.forget ‚âÖ R
    where
  Hom := { app := fun X => ùüô _ }
  inv := { app := fun X => ùüô _ }
#align category_theory.monad.comparison_forget CategoryTheory.Monad.comparisonForget
-/

#print CategoryTheory.Monad.left_comparison /-
theorem Monad.left_comparison (h : L ‚ä£ R) : L ‚ãô Monad.comparison h = h.toMonad.free :=
  rfl
#align category_theory.monad.left_comparison CategoryTheory.Monad.left_comparison
-/

instance [CategoryTheory.Functor.Faithful R] (h : L ‚ä£ R) :
    CategoryTheory.Functor.Faithful (Monad.comparison h)
    where map_injective' X Y f g w := R.map_injective (congr_arg Monad.Algebra.Hom.f w : _)

instance (T : Monad C) : CategoryTheory.Functor.Full (Monad.comparison T.adj)
    where preimage X Y f := ‚ü®f.f, by simpa using f.h‚ü©

instance (T : Monad C) : CategoryTheory.Functor.EssSurj (Monad.comparison T.adj)
    where mem_essImage X :=
    ‚ü®{  A := X.A
        a := X.a
        unit' := by simpa using X.unit
        assoc' := by simpa using X.assoc }, ‚ü®Monad.Algebra.isoMk (Iso.refl _) (by simp)‚ü©‚ü©

#print CategoryTheory.Comonad.comparison /-
/--
Gven any adjunction `L ‚ä£ R`, there is a comparison functor `category_theory.comonad.comparison L`
sending objects `X : C` to Eilenberg-Moore coalgebras for `L ‚ãô R` with underlying object
`L.obj X`.
-/
@[simps]
def Comonad.comparison (h : L ‚ä£ R) : C ‚•§ h.toComonad.Coalgebra
    where
  obj X :=
    { A := L.obj X
      a := L.map (h.Unit.app X)
      coassoc' := by dsimp; rw [‚Üê L.map_comp, ‚Üê adjunction.unit_naturality, L.map_comp]; rfl }
  map X Y f :=
    { f := L.map f
      h' := by dsimp; rw [‚Üê L.map_comp]; simp }
#align category_theory.comonad.comparison CategoryTheory.Comonad.comparison
-/

#print CategoryTheory.Comonad.comparisonForget /-
/-- The underlying object of `(comonad.comparison L).obj X` is just `L.obj X`.
-/
@[simps]
def Comonad.comparisonForget {L : C ‚•§ D} {R : D ‚•§ C} (h : L ‚ä£ R) :
    Comonad.comparison h ‚ãô h.toComonad.forget ‚âÖ L
    where
  Hom := { app := fun X => ùüô _ }
  inv := { app := fun X => ùüô _ }
#align category_theory.comonad.comparison_forget CategoryTheory.Comonad.comparisonForget
-/

#print CategoryTheory.Comonad.left_comparison /-
theorem Comonad.left_comparison (h : L ‚ä£ R) : R ‚ãô Comonad.comparison h = h.toComonad.cofree :=
