variable {Œπ : Type _} {l : Filter Œπ} [NeBot l] {E : Type _} [NormedAddCommGroup E] [NormedSpace ‚Ñù E] {ùïú : Type _}
  [IsROrC ùïú] [NormedSpace ùïú E] {G : Type _} [NormedAddCommGroup G] [NormedSpace ùïú G] {f : Œπ ‚Üí E ‚Üí G} {g : E ‚Üí G}
  {f' : Œπ ‚Üí E ‚Üí E ‚ÜíL[ùïú] G} {g' : E ‚Üí E ‚ÜíL[ùïú] G} {x : E}

/-- If a sequence of functions real or complex functions are eventually differentiable on a
neighborhood of `x`, they converge pointwise _at_ `x`, and their derivatives
converge uniformly in a neighborhood of `x`, then the functions form a uniform Cauchy sequence
in a neighborhood of `x`. -/
theorem uniform_cauchy_seq_on_filter_of_tendsto_uniformly_on_filter_fderiv (hf' : UniformCauchySeqOnFilter f' l (ùìù x))
    (hf : ‚àÄ·∂† n : Œπ √ó E in l √ó·∂† ùìù x, HasFderivAt (f n.1) (f' n.1 n.2) n.2) (hfg : Tendsto (fun n => f n x) l (ùìù (g x))) :
    UniformCauchySeqOnFilter f l (ùìù x) := by
  rw [SeminormedAddGroup.uniform_cauchy_seq_on_filter_iff_tendsto_uniformly_on_filter_zero] at hf'‚ä¢
  suffices
    TendstoUniformlyOnFilter (fun (n : Œπ √ó Œπ) (z : E) => f n.1 z - f n.2 z - (f n.1 x - f n.2 x)) 0 (l √ó·∂† l) (ùìù x) ‚àß
      TendstoUniformlyOnFilter (fun (n : Œπ √ó Œπ) (z : E) => f n.1 x - f n.2 x) 0 (l √ó·∂† l) (ùìù x)
    by
    have := this.1.add this.2
    rw [add_zero] at this
    exact this.congr (by simp)
  constructor
  ¬∑ -- This inequality follows from the mean value theorem. To apply it, we will need to shrink our
    -- neighborhood to small enough ball
    rw [Metric.tendsto_uniformly_on_filter_iff] at hf'‚ä¢
    intro Œµ hŒµ
    have := (tendsto_swap4_prod.eventually (hf.prod_mk hf)).diag_of_prod_right
    obtain ‚ü®a, b, c, d, e‚ü© := eventually_prod_iff.1 ((hf' Œµ hŒµ).And this)
    obtain ‚ü®R, hR, hR'‚ü© := metric.nhds_basis_ball.eventually_iff.mp d
    let r := min 1 R
    have hr : 0 < r := by simp [hR]
    have hr' : ‚àÄ ‚¶Éy : E‚¶Ñ, y ‚àà Metric.Ball x r ‚Üí c y := fun y hy =>
      hR' (lt_of_lt_of_le (metric.mem_ball.mp hy) (min_le_right _ _))
    have hxy : ‚àÄ y : E, y ‚àà Metric.Ball x r ‚Üí ‚à•y - x‚à• < 1 := by
      intro y hy
      rw [Metric.mem_ball, dist_eq_norm] at hy
      exact lt_of_lt_of_le hy (min_le_left _ _)
    have hxyŒµ : ‚àÄ y : E, y ‚àà Metric.Ball x r ‚Üí Œµ * ‚à•y - x‚à• < Œµ := by
      intro y hy
      exact (mul_lt_iff_lt_one_right hŒµ.lt).mpr (hxy y hy)
    -- With a small ball in hand, apply the mean value theorem
    refine'
      eventually_prod_iff.mpr
        ‚ü®_, b, fun e : E => Metric.Ball x r e, eventually_mem_set.mpr (metric.nhds_basis_ball.mem_of_mem hr),
          fun n hn y hy => _‚ü©
    simp only [Pi.zero_apply, dist_zero_left] at e‚ä¢
    refine' lt_of_le_of_lt _ (hxyŒµ y hy)
    exact
      Convex.norm_image_sub_le_of_norm_has_fderiv_within_le
        (fun y hy => ((e hn (hr' hy)).2.1.sub (e hn (hr' hy)).2.2).HasFderivWithinAt) (fun y hy => (e hn (hr' hy)).1.le)
        (convex_ball x r) (Metric.mem_ball_self hr) hy
    
  ¬∑ -- This is just `hfg` run through `eventually_prod_iff`
    refine' metric.tendsto_uniformly_on_filter_iff.mpr fun Œµ hŒµ => _
    obtain ‚ü®t, ht, ht'‚ü© := (metric.cauchy_iff.mp hfg.cauchy_map).2 Œµ hŒµ
    exact
      eventually_prod_iff.mpr
        ‚ü®fun n : Œπ √ó Œπ => f n.1 x ‚àà t ‚àß f n.2 x ‚àà t,
          eventually_prod_iff.mpr ‚ü®_, ht, _, ht, fun n hn n' hn' => ‚ü®hn, hn'‚ü©‚ü©, fun y => True, by simp, fun n hn y hy =>
          by simpa [norm_sub_rev, dist_eq_norm] using ht' _ hn.1 _ hn.2‚ü©
    

/-- A variant of the second fundamental theorem of calculus (FTC-2): If a sequence of functions
between real or complex normed spaces are differentiable on a ball centered at `x`, they
converge pointwise _at_ `x`, and their derivatives converge uniformly on the ball, then the
functions form a uniform Cauchy sequence on the ball.

NOTE: The fact that we work on a ball is typically all that is necessary to work with power series
and Dirichlet series (our primary use case). However, this can be generalized by replacing the ball
with any connected, bounded, open set and replacing uniform convergence with local uniform
convergence.
-/
theorem uniform_cauchy_seq_on_ball_of_tendsto_uniformly_on_ball_fderiv {r : ‚Ñù} (hr : 0 < r)
    (hf' : UniformCauchySeqOn f' l (Metric.Ball x r))
    (hf : ‚àÄ n : Œπ, ‚àÄ y : E, y ‚àà Metric.Ball x r ‚Üí HasFderivAt (f n) (f' n y) y)
    (hfg : Tendsto (fun n => f n x) l (ùìù (g x))) : UniformCauchySeqOn f l (Metric.Ball x r) := by
  rw [SeminormedAddGroup.uniform_cauchy_seq_on_iff_tendsto_uniformly_on_zero] at hf'‚ä¢
  suffices
    TendstoUniformlyOn (fun (n : Œπ √ó Œπ) (z : E) => f n.1 z - f n.2 z - (f n.1 x - f n.2 x)) 0 (l √ó·∂† l)
        (Metric.Ball x r) ‚àß
      TendstoUniformlyOn (fun (n : Œπ √ó Œπ) (z : E) => f n.1 x - f n.2 x) 0 (l √ó·∂† l) (Metric.Ball x r)
    by
    have := this.1.add this.2
    rw [add_zero] at this
    refine' this.congr _
    apply eventually_of_forall
    intro n z hz
    simp
  constructor
  ¬∑ -- This inequality follows from the mean value theorem
    rw [Metric.tendsto_uniformly_on_iff] at hf'‚ä¢
    intro Œµ hŒµ
    obtain ‚ü®q, hqpos, hq‚ü© : ‚àÉ q : ‚Ñù, 0 < q ‚àß q * r < Œµ := by
      simp_rw [mul_comm]
      exact exists_pos_mul_lt hŒµ.lt r
    apply (hf' q hqpos.gt).mono
    intro n hn y hy
    simp_rw [dist_eq_norm, Pi.zero_apply, zero_sub, norm_neg] at hn‚ä¢
    have mvt :=
      Convex.norm_image_sub_le_of_norm_has_fderiv_within_le
        (fun z hz => ((hf n.1 z hz).sub (hf n.2 z hz)).HasFderivWithinAt) (fun z hz => (hn z hz).le) (convex_ball x r)
        (Metric.mem_ball_self hr) hy
    refine' lt_of_le_of_lt mvt _
    have : q * ‚à•y - x‚à• < q * r :=
      mul_lt_mul' rfl.le (by simpa only [dist_eq_norm] using metric.mem_ball.mp hy) (norm_nonneg _) hqpos
    exact this.trans hq
    
  ¬∑ -- This is just `hfg` run through `eventually_prod_iff`
    refine' metric.tendsto_uniformly_on_iff.mpr fun Œµ hŒµ => _
    obtain ‚ü®t, ht, ht'‚ü© := (metric.cauchy_iff.mp hfg.cauchy_map).2 Œµ hŒµ
    rw [eventually_prod_iff]
    refine' ‚ü®fun n => f n x ‚àà t, ht, fun n => f n x ‚àà t, ht, _‚ü©
    intro n hn n' hn' z hz
    rw [dist_eq_norm, Pi.zero_apply, zero_sub, norm_neg, ‚Üê dist_eq_norm]
    exact ht' _ hn _ hn'
    

/-- If `f_n ‚Üí g` pointwise and the derivatives `(f_n)' ‚Üí h` _uniformly_ converge, then
in fact for a fixed `y`, the difference quotients `‚à•z - y‚à•‚Åª¬π ‚Ä¢ (f_n z - f_n y)` converge
_uniformly_ to `‚à•z - y‚à•‚Åª¬π ‚Ä¢ (g z - g y)` -/
theorem difference_quotients_converge_uniformly (hf' : TendstoUniformlyOnFilter f' g' l (ùìù x))
    (hf : ‚àÄ·∂† n : Œπ √ó E in l √ó·∂† ùìù x, HasFderivAt (f n.1) (f' n.1 n.2) n.2)
    (hfg : ‚àÄ·∂† y : E in ùìù x, Tendsto (fun n => f n y) l (ùìù (g y))) :
    TendstoUniformlyOnFilter (fun n : Œπ => fun y : E => (‚à•y - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (f n y - f n x))
      (fun y : E => (‚à•y - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (g y - g x)) l (ùìù x) :=
  by
  refine'
    UniformCauchySeqOnFilter.tendsto_uniformly_on_filter_of_tendsto _
      ((hfg.and (eventually_const.mpr hfg.self_of_nhds)).mono fun y hy => (hy.1.sub hy.2).const_smul _)
  rw [SeminormedAddGroup.uniform_cauchy_seq_on_filter_iff_tendsto_uniformly_on_filter_zero]
  rw [Metric.tendsto_uniformly_on_filter_iff]
  have hfg' := hf'.uniform_cauchy_seq_on_filter
  rw [SeminormedAddGroup.uniform_cauchy_seq_on_filter_iff_tendsto_uniformly_on_filter_zero] at hfg'
  rw [Metric.tendsto_uniformly_on_filter_iff] at hfg'
  intro Œµ hŒµ
  obtain ‚ü®q, hqpos, hqŒµ‚ü© := exists_pos_rat_lt hŒµ
  specialize hfg' (q : ‚Ñù) (by simp [hqpos])
  have := (tendsto_swap4_prod.eventually (hf.prod_mk hf)).diag_of_prod_right
  obtain ‚ü®a, b, c, d, e‚ü© := eventually_prod_iff.1 (hfg'.and this)
  obtain ‚ü®r, hr, hr'‚ü© := metric.nhds_basis_ball.eventually_iff.mp d
  rw [eventually_prod_iff]
  refine'
    ‚ü®_, b, fun e : E => Metric.Ball x r e, eventually_mem_set.mpr (metric.nhds_basis_ball.mem_of_mem hr),
      fun n hn y hy => _‚ü©
  simp only [Pi.zero_apply, dist_zero_left]
  rw [‚Üê smul_sub, norm_smul, norm_inv, IsROrC.norm_coe_norm]
  refine' lt_of_le_of_lt _ hqŒµ
  by_cases hyz':x = y
  ¬∑ simp [hyz', hqpos.le]
    
  have hyz : 0 < ‚à•y - x‚à• := by
    rw [norm_pos_iff]
    intro hy'
    exact hyz' (eq_of_sub_eq_zero hy').symm
  rw [inv_mul_le_iff hyz, mul_comm, sub_sub_sub_comm]
  simp only [Pi.zero_apply, dist_zero_left] at e
  refine'
    Convex.norm_image_sub_le_of_norm_has_fderiv_within_le
      (fun y hy => ((e hn (hr' hy)).2.1.sub (e hn (hr' hy)).2.2).HasFderivWithinAt) (fun y hy => (e hn (hr' hy)).1.le)
      (convex_ball x r) (Metric.mem_ball_self hr) hy

/-- `(d/dx) lim_{n ‚Üí ‚àû} f n x = lim_{n ‚Üí ‚àû} f' n x` when the `f' n` converge
_uniformly_ to their limit at `x`.

In words the assumptions mean the following:
  * `hf'`: The `f'` converge "uniformly at" `x` to `g'`. This does not mean that the `f' n` even
    converge away from `x`!
  * `hf`: For all `(y, n)` with `y` sufficiently close to `x` and `n` sufficiently large, `f' n` is
    the derivative of `f n`
  * `hfg`: The `f n` converge pointwise to `g` on a neighborhood of `x` -/
theorem hasFderivAtOfTendstoUniformlyOnFilter (hf' : TendstoUniformlyOnFilter f' g' l (ùìù x))
    (hf : ‚àÄ·∂† n : Œπ √ó E in l √ó·∂† ùìù x, HasFderivAt (f n.1) (f' n.1 n.2) n.2)
    (hfg : ‚àÄ·∂† y in ùìù x, Tendsto (fun n => f n y) l (ùìù (g y))) : HasFderivAt g (g' x) x := by
  -- The proof strategy follows several steps:
  --   1. The quantifiers in the definition of the derivative are
  --      `‚àÄ Œµ > 0, ‚àÉŒ¥ > 0, ‚àÄy ‚àà B_Œ¥(x)`. We will introduce a quantifier in the middle:
  --      `‚àÄ Œµ > 0, ‚àÉN, ‚àÄn ‚â• N, ‚àÉŒ¥ > 0, ‚àÄy ‚àà B_Œ¥(x)` which will allow us to introduce the `f(') n`
  --   2. The order of the quantifiers `hfg` are opposite to what we need. We will be able to swap
  --      the quantifiers using the uniform convergence assumption
  rw [has_fderiv_at_iff_tendsto]
  -- Introduce extra quantifier via curried filters
  suffices tendsto (fun y : Œπ √ó E => ‚à•y.2 - x‚à•‚Åª¬π * ‚à•g y.2 - g x - (g' x) (y.2 - x)‚à•) (l.curry (ùìù x)) (ùìù 0) by
    rw [Metric.tendsto_nhds] at this‚ä¢
    intro Œµ hŒµ
    specialize this Œµ hŒµ
    rw [eventually_curry_iff] at this
    simp only at this
    exact (eventually_const.mp this).mono (by simp only [imp_self, forall_const])
  -- With the new quantifier in hand, we can perform the famous `Œµ/3` proof. Specifically,
-- we will break up the limit (the difference functions minus the derivative go to 0) into 3:
--   * The difference functions of the `f n` converge *uniformly* to the difference functions
--     of the `g n`
--   * The `f' n` are the derivatives of the `f n`
--   * The `f' n` converge to `g'` at `x`
conv =>
  congr
  ext
  rw [‚Üê norm_norm, ‚Üê norm_inv, ‚Üê @IsROrC.norm_of_real ùïú _ _, IsROrC.of_real_inv, ‚Üê norm_smul]
  rw [‚Üê tendsto_zero_iff_norm_tendsto_zero]
  have :
    (fun a : Œπ √ó E => (‚à•a.2 - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (g a.2 - g x - (g' x) (a.2 - x))) =
      ((fun a : Œπ √ó E => (‚à•a.2 - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (g a.2 - g x - (f a.1 a.2 - f a.1 x))) + fun a : Œπ √ó E =>
          (‚à•a.2 - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (f a.1 a.2 - f a.1 x - ((f' a.1 x) a.2 - (f' a.1 x) x))) +
        fun a : Œπ √ó E => (‚à•a.2 - x‚à•‚Åª¬π : ùïú) ‚Ä¢ (f' a.1 x - g' x) (a.2 - x) :=
    by
    ext
    simp only [Pi.add_apply]
    rw [‚Üê smul_add, ‚Üê smul_add]
    congr
    simp only [map_sub, sub_add_sub_cancel, ContinuousLinearMap.coe_sub', Pi.sub_apply]
  simp_rw [this]
  have : ùìù (0 : G) = ùìù (0 + 0 + 0)
  simp only [add_zero]
  rw [this]
  refine' tendsto.add (tendsto.add _ _) _
  simp only
  ¬∑ have := difference_quotients_converge_uniformly hf' hf hfg
    rw [Metric.tendsto_uniformly_on_filter_iff] at this
    rw [Metric.tendsto_nhds]
    intro Œµ hŒµ
    apply ((this Œµ hŒµ).filter_mono curry_le_prod).mono
    intro n hn
    rw [dist_eq_norm] at hn‚ä¢
    rw [‚Üê smul_sub] at hn
    rwa [sub_zero]
    
  ¬∑ -- (Almost) the definition of the derivatives
    rw [Metric.tendsto_nhds]
    intro Œµ hŒµ
    rw [eventually_curry_iff]
    refine' hf.curry.mono fun n hn => _
    have := hn.self_of_nhds
    rw [has_fderiv_at_iff_tendsto, Metric.tendsto_nhds] at this
    refine' (this Œµ hŒµ).mono fun y hy => _
    rw [dist_eq_norm] at hy‚ä¢
    simp only [sub_zero, map_sub, norm_mul, norm_inv, norm_norm] at hy‚ä¢
    rw [norm_smul, norm_inv, IsROrC.norm_coe_norm]
    exact hy
    
  ¬∑ -- hfg' after specializing to `x` and applying the definition of the operator norm
    refine' tendsto.mono_left _ curry_le_prod
    have h1 : tendsto (fun n : Œπ √ó E => g' n.2 - f' n.1 n.2) (l √ó·∂† ùìù x) (ùìù 0) := by
      rw [Metric.tendsto_uniformly_on_filter_iff] at hf'
      exact metric.tendsto_nhds.mpr fun Œµ hŒµ => by simpa using hf' Œµ hŒµ
    have h2 : tendsto (fun n : Œπ => g' x - f' n x) l (ùìù 0) := by
      rw [Metric.tendsto_nhds] at h1‚ä¢
      exact fun Œµ hŒµ => (h1 Œµ hŒµ).curry.mono fun n hn => hn.self_of_nhds
    have := tendsto_fst.comp (h2.prod_map tendsto_id)
    refine' squeeze_zero_norm _ (tendsto_zero_iff_norm_tendsto_zero.mp this)
    intro n
    simp_rw [norm_smul, norm_inv, IsROrC.norm_coe_norm]
    by_cases hx:x = n.2
    ¬∑ simp [hx]
      
    have hnx : 0 < ‚à•n.2 - x‚à• := by
      rw [norm_pos_iff]
      intro hx'
      exact hx (eq_of_sub_eq_zero hx').symm
    rw [inv_mul_le_iff hnx, mul_comm]
    simp only [Function.comp_app, prod_map]
    rw [norm_sub_rev]
    exact (f' n.1 x - g' x).le_op_norm (n.2 - x)
    

/-- `(d/dx) lim_{n ‚Üí ‚àû} f n x = lim_{n ‚Üí ‚àû} f' n x` when the `f' n` converge
_uniformly_ to their limit on an open set containing `x`. -/
theorem hasFderivAtOfTendstoUniformlyOn {s : Set E} (hs : IsOpen s) (hf' : TendstoUniformlyOn f' g' l s)
    (hf : ‚àÄ n : Œπ, ‚àÄ x : E, x ‚àà s ‚Üí HasFderivAt (f n) (f' n x) x)
    (hfg : ‚àÄ x : E, x ‚àà s ‚Üí Tendsto (fun n => f n x) l (ùìù (g x))) : ‚àÄ x : E, x ‚àà s ‚Üí HasFderivAt g (g' x) x := by
  intro x hx
  have hf : ‚àÄ·∂† n : Œπ √ó E in l √ó·∂† ùìù x, HasFderivAt (f n.1) (f' n.1 n.2) n.2 :=
    eventually_prod_iff.mpr
      ‚ü®fun y => True, by simp, fun y => y ‚àà s, eventually_mem_set.mpr (mem_nhds_iff.mpr ‚ü®s, rfl.subset, hs, hx‚ü©),
        fun n hn y hy => hf n y hy‚ü©
  have hfg : ‚àÄ·∂† y in ùìù x, tendsto (fun n => f n y) l (ùìù (g y)) :=
    eventually_iff.mpr (mem_nhds_iff.mpr ‚ü®s, set.subset_def.mpr hfg, hs, hx‚ü©)
  have hfg' :=
    hf'.tendsto_uniformly_on_filter.mono_right
      (calc
        ùìù x = ùìù[s] x := (hs.nhds_within_eq hx).symm
        _ ‚â§ ùìü s := by simp only [nhdsWithin, inf_le_right]
        )
  exact hasFderivAtOfTendstoUniformlyOnFilter hfg' hf hfg

/-- `(d/dx) lim_{n ‚Üí ‚àû} f n x = lim_{n ‚Üí ‚àû} f' n x` when the `f' n` converge
_uniformly_ to their limit. -/
theorem hasFderivAtOfTendstoUniformly (hf' : TendstoUniformly f' g' l)
    (hf : ‚àÄ n : Œπ, ‚àÄ x : E, HasFderivAt (f n) (f' n x) x) (hfg : ‚àÄ x : E, Tendsto (fun n => f n x) l (ùìù (g x))) :
    ‚àÄ x : E, HasFderivAt g (g' x) x := by
  intro x
  have hf : ‚àÄ n : Œπ, ‚àÄ x : E, x ‚àà Set.Univ ‚Üí HasFderivAt (f n) (f' n x) x := by simp [hf]
  have hfg : ‚àÄ x : E, x ‚àà Set.Univ ‚Üí tendsto (fun n => f n x) l (ùìù (g x)) := by simp [hfg]
  have hf' : TendstoUniformlyOn f' g' l Set.Univ := by rwa [tendsto_uniformly_on_univ]
  refine' hasFderivAtOfTendstoUniformlyOn is_open_univ hf' hf hfg x (Set.mem_univ x)

end LimitsOfDerivatives

section deriv

/-! ### `deriv` versions of above theorems

In this section, we provide `deriv` equivalents of the `fderiv` lemmas in the previous section.
The protected function `promote_deriv` provides the translation between derivatives and Fr√©chet
derivatives
-/


variable {Œπ : Type _} {l : Filter Œπ} {ùïú : Type _} [IsROrC ùïú] {G : Type _} [NormedAddCommGroup G] [NormedSpace ùïú G]
  {f : Œπ ‚Üí ùïú ‚Üí G} {g : ùïú ‚Üí G} {f' : Œπ ‚Üí ùïú ‚Üí G} {g' : ùïú ‚Üí G} {x : ùïú}

/-- If our derivatives converge uniformly, then the Fr√©chet derivatives converge uniformly -/
theorem UniformCauchySeqOnFilter.one_smul_right {l' : Filter ùïú} (hf' : UniformCauchySeqOnFilter f' l l') :
    UniformCauchySeqOnFilter (fun n => fun z => (1 : ùïú ‚ÜíL[ùïú] ùïú).smul_right (f' n z)) l l' := by
  -- The tricky part of this proof is that operator norms are written in terms of `‚â§` whereas
  -- metrics are written in terms of `<`. So we need to shrink `Œµ` utilizing the archimedean
  -- property of `‚Ñù`
  rw [SeminormedAddGroup.uniform_cauchy_seq_on_filter_iff_tendsto_uniformly_on_filter_zero,
    Metric.tendsto_uniformly_on_filter_iff] at hf'‚ä¢
  intro Œµ hŒµ
  obtain ‚ü®q, hq, hq'‚ü© := exists_between hŒµ.lt
  apply (hf' q hq).mono
  intro n hn
  refine' lt_of_le_of_lt _ hq'
  simp only [dist_eq_norm, Pi.zero_apply, zero_sub, norm_neg] at hn‚ä¢
  refine' ContinuousLinearMap.op_norm_le_bound _ hq.le _
  intro z
  simp only [ContinuousLinearMap.coe_sub', Pi.sub_apply, ContinuousLinearMap.smul_right_apply,
    ContinuousLinearMap.one_apply]
  rw [‚Üê smul_sub, norm_smul, mul_comm]
  exact mul_le_mul hn.le rfl.le (norm_nonneg _) hq.le

variable [NeBot l]

theorem uniform_cauchy_seq_on_filter_of_tendsto_uniformly_on_filter_deriv (hf' : UniformCauchySeqOnFilter f' l (ùìù x))
    (hf : ‚àÄ·∂† n : Œπ √ó ùïú in l √ó·∂† ùìù x, HasDerivAt (f n.1) (f' n.1 n.2) n.2) (hfg : Tendsto (fun n => f n x) l (ùìù (g x))) :
    UniformCauchySeqOnFilter f l (ùìù x) := by
  simp_rw [has_deriv_at_iff_has_fderiv_at] at hf
  exact uniform_cauchy_seq_on_filter_of_tendsto_uniformly_on_filter_fderiv hf'.one_smul_right hf hfg

theorem uniform_cauchy_seq_on_ball_of_tendsto_uniformly_on_ball_deriv {r : ‚Ñù} (hr : 0 < r)
    (hf' : UniformCauchySeqOn f' l (Metric.Ball x r))
    (hf : ‚àÄ n : Œπ, ‚àÄ y : ùïú, y ‚àà Metric.Ball x r ‚Üí HasDerivAt (f n) (f' n y) y)
    (hfg : Tendsto (fun n => f n x) l (ùìù (g x))) : UniformCauchySeqOn f l (Metric.Ball x r) := by
  simp_rw [has_deriv_at_iff_has_fderiv_at] at hf
  rw [uniform_cauchy_seq_on_iff_uniform_cauchy_seq_on_filter] at hf'
  have hf' : UniformCauchySeqOn (fun n => fun z => (1 : ùïú ‚ÜíL[ùïú] ùïú).smul_right (f' n z)) l (Metric.Ball x r) := by
    rw [uniform_cauchy_seq_on_iff_uniform_cauchy_seq_on_filter]
    exact hf'.one_smul_right
  exact uniform_cauchy_seq_on_ball_of_tendsto_uniformly_on_ball_fderiv hr hf' hf hfg

theorem hasDerivAtOfTendstoUniformlyOnFilter (hf' : TendstoUniformlyOnFilter f' g' l (ùìù x))
    (hf : ‚àÄ·∂† n : Œπ √ó ùïú in l √ó·∂† ùìù x, HasDerivAt (f n.1) (f' n.1 n.2) n.2)
    (hfg : ‚àÄ·∂† y in ùìù x, Tendsto (fun n => f n y) l (ùìù (g y))) : HasDerivAt g (g' x) x := by
  -- The first part of the proof rewrites `hf` and the goal to be functions so that Lean
  -- can recognize them when we apply `has_fderiv_at_of_tendsto_uniformly_on_filter`
  let F' n z := (1 : ùïú ‚ÜíL[ùïú] ùïú).smul_right (f' n z)
  let G' z := (1 : ùïú ‚ÜíL[ùïú] ùïú).smul_right (g' z)
  simp_rw [has_deriv_at_iff_has_fderiv_at] at hf‚ä¢
  -- Now we need to rewrite hf' in terms of continuous_linear_maps. The tricky part is that
  -- operator norms are written in terms of `‚â§` whereas metrics are written in terms of `<`. So we
  -- need to shrink `Œµ` utilizing the archimedean property of `‚Ñù`
  have hf' : TendstoUniformlyOnFilter F' G' l (ùìù x) := by
    rw [Metric.tendsto_uniformly_on_filter_iff] at hf'‚ä¢
    intro Œµ hŒµ
    obtain ‚ü®q, hq, hq'‚ü© := exists_between hŒµ.lt
    apply (hf' q hq).mono
    intro n hn
    refine' lt_of_le_of_lt _ hq'
    simp only [F', G', dist_eq_norm] at hn‚ä¢
    refine' ContinuousLinearMap.op_norm_le_bound _ hq.le _
    intro z
    simp only [ContinuousLinearMap.coe_sub', Pi.sub_apply, ContinuousLinearMap.smul_right_apply,
      ContinuousLinearMap.one_apply]
    rw [‚Üê smul_sub, norm_smul, mul_comm]
    exact mul_le_mul hn.le rfl.le (norm_nonneg _) hq.le
  exact hasFderivAtOfTendstoUniformlyOnFilter hf' hf hfg

theorem hasDerivAtOfTendstoUniformlyOn {s : Set ùïú} (hs : IsOpen s) (hf' : TendstoUniformlyOn f' g' l s)
    (hf : ‚àÄ n : Œπ, ‚àÄ x : ùïú, x ‚àà s ‚Üí HasDerivAt (f n) (f' n x) x)
    (hfg : ‚àÄ x : ùïú, x ‚àà s ‚Üí Tendsto (fun n => f n x) l (ùìù (g x))) : ‚àÄ x : ùïú, x ‚àà s ‚Üí HasDerivAt g (g' x) x := by
  intro x hx
  have hsx : s ‚àà ùìù x := mem_nhds_iff.mpr ‚ü®s, rfl.subset, hs, hx‚ü©
  rw [tendsto_uniformly_on_iff_tendsto_uniformly_on_filter] at hf'
  have hf' := hf'.mono_right (le_principal_iff.mpr hsx)
  have hfg : ‚àÄ·∂† y in ùìù x, tendsto (fun n => f n y) l (ùìù (g y)) := eventually_iff_exists_mem.mpr ‚ü®s, hsx, hfg‚ü©
  have hf : ‚àÄ·∂† n : Œπ √ó ùïú in l √ó·∂† ùìù x, HasDerivAt (f n.1) (f' n.1 n.2) n.2 := by
    rw [eventually_prod_iff]
    refine' ‚ü®fun y => True, by simp, fun y => y ‚àà s, _, fun n hn y hy => hf n y hy‚ü©
    exact eventually_mem_set.mpr hsx
  exact hasDerivAtOfTendstoUniformlyOnFilter hf' hf hfg

theorem hasDerivAtOfTendstoUniformly (hf' : TendstoUniformly f' g' l)
    (hf : ‚àÄ n : Œπ, ‚àÄ x : ùïú, HasDerivAt (f n) (f' n x) x) (hfg : ‚àÄ x : ùïú, Tendsto (fun n => f n x) l (ùìù (g x))) :
    ‚àÄ x : ùïú, HasDerivAt g (g' x) x := by
  intro x
  have hf : ‚àÄ n : Œπ, ‚àÄ x : ùïú, x ‚àà Set.Univ ‚Üí HasDerivAt (f n) (f' n x) x := by simp [hf]
  have hfg : ‚àÄ x : ùïú, x ‚àà Set.Univ ‚Üí tendsto (fun n => f n x) l (ùìù (g x)) := by simp [hfg]
  have hf' : TendstoUniformlyOn f' g' l Set.Univ := by rwa [tendsto_uniformly_on_univ]
  exact hasDerivAtOfTendstoUniformlyOn is_open_univ hf' hf hfg x (Set.mem_univ x)

end deriv

