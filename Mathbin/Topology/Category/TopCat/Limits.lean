        rw [dif_pos he]
        exact compat j e (g e he) (U e) (h1 e he)
      ¬∑ -- conclude...
        rw [h2]
        dsimp [V]
        rw [Set.preimage_inter·µ¢]
        congr 1
        ext1 e
        rw [Set.preimage_inter·µ¢]
        congr 1
        ext1 he
        dsimp [Vs]
        rw [dif_pos he, ‚Üê Set.preimage_comp]
        congr 1
        change _ = ‚áë(D.œÄ.app j ‚â´ F.map (g e he))
        rw [D.w]
